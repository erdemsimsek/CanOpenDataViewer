{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Deep Clean",
            "type": "shell",
            "command": "make deepclean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Delete the socket",
            "type": "shell",
            "command": "rm -f /tmp/CO_command_socket",
            "problemMatcher": []
        },
        {
            "label": "Delete socket and Build",
            "dependsOn": ["Delete the socket", "Build"],
            "dependsOrder": "sequence",
            "runOptions": {
                "runOn": "default"
            }
        }
    ]
}
